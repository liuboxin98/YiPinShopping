.swiper-height {
  height: 730rpx !important;
}

.detail {
  position: relative;
  top: 0;
  left: 0;
}

.scroll {
  /* height: calc(100% - 120rpx); */
  height: 1500rpx;
}

.title {
  font-size: 32rpx;
  margin-top: 15rpx;
}

.content {
  font-size: 28rpx;
  padding: 15rpx;
}

.price {
  color: #ff5777;
  padding: 24rpx 0;
  font-size: 30rpx;
}

